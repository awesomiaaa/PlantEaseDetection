<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".HomeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/spalash_gradient_bg"
    android:backgroundTint="#9F000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:src="@mipmap/logo" />

    </RelativeLayout>

    <GridLayout

        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:rowCount="2"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/library"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/home_button"
            android:drawableTop="@drawable/openbook"
            android:paddingTop="50dp"
            android:text="Library"
            android:textSize="30dp"
            android:paddingBottom="20dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/scan"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/home_button"
            android:drawableTop="@drawable/research"
            android:paddingTop="50dp"
            android:paddingBottom="20dp"
            android:text="Scan"
            android:textSize="30dp"
            android:textColor="#000"
            />

        <Button
            android:id="@+id/history"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:background="@drawable/home_button"
            android:drawableTop="@drawable/clock"
            android:paddingTop="50dp"
            android:paddingBottom="15dp"
            android:text="History"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/about"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:background="@drawable/home_button"
            android:paddingTop="50dp"
            android:paddingBottom="15dp"
            android:drawableTop="@drawable/information"
            android:text="About"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_row="1"
            android:layout_column="1"/>
    </GridLayout>
</LinearLayout>
</LinearLayout>